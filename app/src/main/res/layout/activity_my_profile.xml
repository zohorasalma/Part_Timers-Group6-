<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MyProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photo"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FBFDFD"
                app:cardCornerRadius="60dp"
                app:cardElevation="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:padding="3dp"
                    android:src="@drawable/me" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:id="@+id/userNameTV"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/educationTV"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/educationEdit"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_edit_24"
                    android:layout_marginRight="20dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bsc cse"
                android:textSize="16sp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/ed_education"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible"/>



            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/skillTV"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Skills"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:id="@+id/skillEdit"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_edit_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT"
                android:textSize="16sp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/ed_skill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />


            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/interestTV"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Interests"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/interestEdit"
                    android:src="@drawable/ic_edit_24"
                    android:layout_marginRight="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT, software"
                android:textSize="16sp"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/ed_interest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveChangesBtn"
                android:layout_gravity="center"
                android:text="Save Changes"
                android:background="@drawable/button_background"
                android:textColor="@android:color/holo_blue_light"
                android:onClick="updateProfile"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@android:color/holo_blue_light"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true" />

</LinearLayout>